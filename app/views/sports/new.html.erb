<h1>Add Another Sport</h1>

<div class="form">
  <%= form_tag(sports_path) do %>
    <fieldset>
      <%= label_tag :name %>
      <%= text_field_tag :name %><br/>

      <%= label_tag :players %>
      <%= text_field_tag :players %><br/>

      <%= label_tag :description %>
      <%= text_field_tag :description %><br/>

      <%= label_tag :court %>
      <%= text_field_tag :court %><br/>

      <%= label_tag :created_in %>
      <%= text_field_tag :created_in %><br/>

      <%= submit_tag "Create Sport" %>
    </fieldset>
  <% end %>
</div>